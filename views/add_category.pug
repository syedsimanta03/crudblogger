extends layout

block content
  .bg-imgg
  .container
    h2.text-primary.card-header.bg-transparent.cen #{title}
    ul.errors
      if errors
        each error, i in errors
         .alert.alert-danger.alert-dismissible.fade.show.animated.bounceIn(role='alert')
          span.alert-icon.mr-2
            i.fas.fa-exclamation-circle
          span.alert-text
            strong Failed!
            |  #{error.msg} &mdash;fill all the fields!
          button.close(type='button' data-dismiss='alert' aria-label='Close')
            span(aria-hidden='true') &times;

    form(method='post', action='/categories/add')
      .form-group
        label Title:
        input.form-control(name='title', type='text')
      .form-group
        label Description:
        textarea.form-control(name='description')
      input.btn.btn-primary.px-12(type='submit', name='submit', value='Save')
      a.btn.btn-outline-default.px-12(href='/manage/categories') Back
